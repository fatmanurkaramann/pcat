<%- include('partials/_header.ejs') -%>

    <body>
        <div class="container-fluid" style="margin:0;padding:0;">
            <div class="position-relative">
                <%- include('partials/_navigation.ejs') -%>
                    <div class="tm-welcome-container tm-fixed-header tm-fixed-header-3">
                        <div class="text-center">
                            <p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 mt-lg-0 mt-5 text-white mx-auto">
                                Talk to Us<br>about any question you have
                            </p>
                        </div>
                    </div>

                    <div id="tm-fixed-header-bg"></div> <!-- Header image -->
            </div>
            <main>
                <div class="container-fluid">
                    <div class="edit-container">
                        <div class="row mt-3 mb-5 pb-3">

                        </div>
                        <div class="mx-auto pb-3 tm-about-text-container px-3">
                            <div class="row">
                                <div class="col-lg-12 mb-5">
                                    <form method="post" encType="multipart/form-data"
                                        action="/photos/<%= photo._id %>?_method=PUT" class="tm-contact-form">
                                        <div class="form-group">
                                            <input type="text" name="title" value='<%= photo.title %>'
                                                class="form-control rounded-0" placeholder="Photo title" required />
                                        </div>
                                        <div class="form-group">
                                            <textarea rows="8" name="description" class="form-control rounded-0"
                                                placeholder="Photo description"
                                                required><%= photo.description %></textarea>
                                        </div>
                                        <div class="form-group mb-0">
                                            <button type="submit"
                                                class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Update</span></button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </main>
            <div class="container-fluid tm-content-container mx-auto pt-4">
                <!-- Subscribe form and footer links -->
                <%- include('partials/_footer.ejs') -%>
            </div>
        </div>
    </body>